#include <stdio.h>

int main()
{
    int num;
    int resultado=1;
    
    printf("digite o número para calcular seu fatorial:");
    scanf("%d",&num);
    
    for( ; num >=1; num--){
        resultado= num * resultado;
    }
    printf("o fatorial desse número é:%d", resultado);
    

    return 0;
}
